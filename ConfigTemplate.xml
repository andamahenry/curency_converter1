<?xml version='1.0' encoding='utf-8'?>

<widget id="org.jerm.[[PROJECT-SHORT-NAME]]" version="[[X.Y.Z]]" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>[[PROJECT-NAME]]</name>
    <description>[[PROJECT-DESCRIPTION]]</description>

    <author email="[[EMAIL]]" href="[[WEBSITE]]">[[YOUR NAMES]]</author>

    <!-- am assuming your index file will always be index.html -->
    <content src="index.html" />

    <preference name="DisallowOverscroll" value="true" />
    
    <!-- this allows earlier versions of android to be suported -->
    <preference name="android-minSdkVersion" value="14"/>

    <!-- without this, the keyboard will distort the window when a user wants to type eg in an input -->
    <preference name="android-windowSoftInputMode" value="adjustPan" />
    

    <!-- allow all possible communication protocols -->
    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />


    <icon src="data/JMS.png" gap:role="default" />

    <!-- always include this to support the communication protocols listed above -->
    <plugin name="cordova-plugin-whitelist" />

    <!-- plugins to add custom permisions. DONT INCLUDE PLUGINS YOU WONT USE -->
    <!-- note that each plugin has its own documentation of how to use it -->
